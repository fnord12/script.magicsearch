<window>
    <coordinates>
        <system>1</system>
        <posx>340</posx>
        <posy>20</posy>
    </coordinates>
    <include>dialogeffect</include>
    <controls>
        <control type="group">
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="250">WindowClose</animation> 
            <control type="image">
                <description>background texture</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>800</width>
                <height>680</height>
                <texture border="40">DialogBack.png</texture>
            </control>
            <control type="image">
                <description>Dialog Header texture</description>
                <posx>40</posx>
                <posy>16</posy>
                <width>720</width>
                <height>40</height>
                <texture>dialogheader.png</texture>
            </control>
            <control type="label" id="1">
                <description>header label</description>
                <posx>40</posx>
                <posy>20</posy>
                <width>720</width>
                <height>30</height>
                <font>font13_title</font>
                <label>$ADDON[script.magicsearch 44002]</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>selected</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>
            <control type="button" id="2">
                <description>Close Window button</description>
                <posx>710</posx>
                <posy>15</posy>
                <width>64</width>
                <height>32</height>
                <label></label>
                <font>-</font>
                <onclick>PreviousMenu</onclick>
                <texturefocus>DialogCloseButton-focus.png</texturefocus>
                <texturenofocus>DialogCloseButton.png</texturenofocus>
                <onleft>10</onleft>
                <onright>10</onright>
                <onup>10</onup>
                <ondown>10</ondown>
                <visible>system.getbool(input.enablemouse)</visible>
            </control>
            <control type="label" id="3">
                <description>Search result value (e.g. Actor Name), value is set by code</description>
                <posx>40</posx>
                <posy>60</posy>
                <width>720</width>
                <height>30</height>
                <font>font13_title</font>
                
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>white</textcolor>
                <shadowcolor>black</shadowcolor>
            </control>

         
        
        
			<control type="image">
				<description>Offset</description>
				<posx>40</posx>
				<posy>60</posy>
				<width>720</width>
				<height>30</height>
				<texture>$INFO[Container(4).Listitem(0).Thumb]</texture>
				<label>$INFO[Container(4).Listitem(0).Label]</label>
				<aspectratio>keep</aspectratio>
			</control>        
        
        
            <control type="list" id="4">
                <description>inner movie list (not whole pop-up)</description>
                <posx>50</posx>
                <posy>100</posy>
                <width>900</width>
                <height>395</height>
                <onup>4</onup>
                <onleft>30</onleft>
                <onright>60</onright>
                <ondown>4</ondown>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                
                
                
                
                <itemlayout height="60">
                
                    <control type="image"  id="7">
                        <description>The inside box container, unfocused</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>700</width>
                        <height>60</height>
                        <texture border="5">button-nofocus.png</texture>
                    </control>
                    
                    
                    <control type="label"  id="8">
                        <description>Episode, unfocused</description>                        
                        <label>[B]$INFO[ListItem.Property(showtitle)] $INFO[ListItem.Property(media)][/B] : $INFO[ListItem.Label]</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>600</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),x)</visible>
                        <textcolor>grey</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                     
                     <control type="label"  id="8">
                        <description>Movie, unfocused</description>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>600</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),Movie)</visible>
                        <textcolor>grey</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                     
                      <control type="label"  id="8">
                         <description>TV Show, unfocused</description>                        
                        <label>[B]$INFO[ListItem.Label][/B] (series)</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>600</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),TVShow)</visible>
                        <textcolor>grey</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                     
                      <control type="label"  id="8">
                        <description>search refinement, unfocused</description>
                        <label>[B]$INFO[ListItem.Label][/B]$INFO[ListItem.Label2]</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>700</width>
                        <height>50</height>
                        <font>font13</font>
                        <align>center</align>
                        <aligny>center</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),Refine)</visible>
                        <textcolor>blue</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                     
                     <control type="label"  id="9">
                        <label>$INFO[ListItem.Property(year)] </label>
                        <posx>601</posx>
                        <posy>0</posy>
                        <width>90</width>
                        <height>20</height>
                        <font>font13</font>
                        <align>right</align>
                        <aligny>top</aligny>
                        
                        <textcolor>grey</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                     
                     <control type="label"  id="10">
                        <label>$INFO[ListItem.Property(role)]</label>
                       <posx>8</posx>
                        <posy>30</posy>
                        <width>600</width>
                        <height>40</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <textcolor>grey</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                     
                     
                </itemlayout>
                
                
                <focusedlayout height="60">
					<control type="image" id="7">
                        <description>The inside box container, focused</description>
                        <posx>0</posx>
                        <posy>0</posy>
                         <width>700</width>
                        <height>60</height>
                        <texture border="5">button-focus2.png</texture>
                    </control>
                    <control type="label" id="8">
                        <description>Episode, focused</description>                        
                        <label>[B]$INFO[ListItem.Property(showtitle)] $INFO[ListItem.Property(media)][/B] : $INFO[ListItem.Label]</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>600</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),x)</visible>
                        <textcolor>white</textcolor>
                        <selectedcolor>selected</selectedcolor>
                    </control>
                    
                    <control type="label" id="8">
                         <description>Movie, focused</description>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>600</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),Movie)</visible>
                        <textcolor>white</textcolor>
                        <selectedcolor>selected</selectedcolor>
                    </control>
                    
                    <control type="label" id="8">
                        <description>TV Show, focused</description>                        
                        <label>[B]$INFO[ListItem.Label][/B] (series)</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>600</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),TVShow)</visible>
                        <textcolor>white</textcolor>
                        <selectedcolor>selected</selectedcolor>
                    </control>
                    
                    <control type="label"  id="8">
                        <description>Search refinement, focused</description>
                        <label>[B]$INFO[ListItem.Label][/B]$INFO[ListItem.Label2]</label>
                        <posx>8</posx>
                        <posy>0</posy>
                        <width>700</width>
                        <height>50</height>
                        <font>font13</font>
                        <align>center</align>
                        <aligny>center</aligny>
                        
                        <visible>String.Contains(ListItem.Property(media),Refine)</visible>
                        <textcolor>blue</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                    
                     <control type="label"  id="9">
                        <label>$INFO[ListItem.Property(year)] </label>
                        <posx>601</posx>
                        <posy>0</posy>
                        <width>90</width>
                        <height>30</height>
                        <font>font13</font>
                        <align>right</align>
                        <aligny>top</aligny>
                        
                        <textcolor>white</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                    
                     <control type="label"  id="10">
                        <label>$INFO[ListItem.Property(role)]</label>
                       <posx>8</posx>
                        <posy>30</posy>
                        <width>600</width>
                        <height>40</height>
                        <font>font13</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        
                        <textcolor>white</textcolor>
                        <selectedcolor>selected</selectedcolor>
                     </control>
                   
                     
                </focusedlayout>
            </control>
            
            <control type="image"  id="12">
                <posx>0</posx>
				<posy>0</posy>
                <description>Hacky way of showing the actor thumb</description>
                <texture>$INFO[ListItem.Property(actorthumb)]</texture>
                 <height>90</height>
                <aspectratio>keep</aspectratio>
                <visible>False></visible>
            </control>   
                    
                    
            <control type="scrollbar" id="60">
                <posx>760</posx>
                <posy>100</posy>
                <width>25</width>
                <height>495</height>
                <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
                <texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
                <texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
                <textureslidernib>ScrollBarNib.png</textureslidernib>
                <textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
                <onleft>4</onleft>
                <onright>30</onright>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
            
        </control>
        
        <control type="image" id="5">
			<description>Poster, unfocused</description>
			<posy>515</posy>
			<posx>50</posx>
			<width>82</width>
			<height>125</height>
			<texture>$INFO[ListItem.Property(poster)]</texture>
			<visible>!String.Contains(ListItem.Property(media),x)</visible>
        </control>
        <control type="image" id="5">
			<description>Poster, unfocused</description>
			<posy>515</posy>
			<posx>50</posx>
			<width>100</width>
			<height>74</height>
			<texture>$INFO[ListItem.Property(poster)]</texture>
			<visible>String.Contains(ListItem.Property(media),x)</visible>
        </control>
		
		<control type="textbox"  id="11">
			<label>$INFO[ListItem.Property(plotsum)]</label>
			<posy>515</posy>
			<posx>160</posx>posx>
			<width>560</width>
			<height>125</height>
			<font>font13</font>
			<align>lef</align>
			<aligny>top</aligny>
			<scrolltime>200</scrolltime>
			<autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(13)</autoscroll>
			<texture border="40">DialogBack.png</texture>
			<textcolor>grey</textcolor>
			<selectedcolor>selected</selectedcolor>
        </control>       
		<control type="textbox"  id="12">
			<label>$INFO[ListItem.Property(director)]</label>
			<posy>640</posy>
			<posx>50</posx>posx>
			<width>560</width>
			<height>125</height>
			<font>font12</font>
			<align>lef</align>
			<aligny>top</aligny>
			<scrolltime>200</scrolltime>
			<autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(13)</autoscroll>
			<texture border="40">DialogBack.png</texture>
			<textcolor>grey</textcolor>
			<selectedcolor>selected</selectedcolor>
			<visible>Control.HasFocus(4)</visible>
        </control>       
        
    </controls>
</window>
